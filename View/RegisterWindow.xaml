<Window x:Class="FitTracker.View__UI_.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitTracker.View__UI_" xmlns:ViewModel="clr-namespace:FitTracker.ViewModel" d:DataContext="{d:DesignInstance Type=ViewModel:MainWindowViewModel}"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="REGISTER" FontSize="80"/>
            <TextBox Text="{Binding UsernameInput, UpdateSourceTrigger=PropertyChanged}"/>
            <PasswordBox PasswordChanged="PasswordBox_PasswordChanged"/>
            <PasswordBox PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>
            <ComboBox ItemsSource="{Binding Countries}" SelectedItem="{Binding CountryComboBox}"/>
            <ComboBox ItemsSource="{Binding SecurityQuestionList}" SelectedItem="{Binding SecurityQuestion}"/>
            <TextBox Text="{Binding SecurityAnswer}"/>
            <Button Content="Register" Command="{Binding AddUserCommand}" Height="20"/>
            
        </StackPanel>
        
    </Grid>
</Window>
