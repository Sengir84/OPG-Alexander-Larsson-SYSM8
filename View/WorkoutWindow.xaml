<Window x:Class="FitTracker.View__UI_.WorkoutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitTracker.View__UI_"
        mc:Ignorable="d"
        Title="WorkoutWindow" Height="450" Width="800">
    <Grid>
        
        
        <StackPanel>
            <TextBlock Text="{Binding ActiveUser}" Width=" 100" HorizontalAlignment="Right"/>
            <TextBlock Text="WORKOUT" FontSize="100"/>
            <Button Content="Add workout" Command="{Binding AddWorkoutCommand}" Height="20"/>
            <Button Content="Remove Workout" Command="{Binding RemoveWorkoutCommand}"/>
        <Button Content="User Details" Command="{Binding UserDetailsCommand}"/>
            <Button Content="Workout Details" Command="{Binding WorkoutDetailsCommand}"/>
            <Button Content="Sign Out" Command="{Binding SignOutCommand}"/>
            <DataGrid
                IsReadOnly ="True"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                CanUserDeleteRows="False"
                ItemsSource="{Binding WorkoutList}"
                SelectedItem="{Binding SelectedWorkout}">

                <DataGrid.Columns>
                    <DataGridTextColumn
            Width="4*"
            Binding="{Binding Type}"
            Header="Workout" />
                    <DataGridTextColumn
            Width="4*"
            Binding="{Binding Date}"
            Header="Date" />
                    
                    <DataGridTextColumn
            Width="1*"
            Binding="{Binding Duration}"
            Header="Duration" />
                </DataGrid.Columns>

            </DataGrid>
            
        </StackPanel>
        
    </Grid>
</Window>
