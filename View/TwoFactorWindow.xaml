<Window x:Class="FitTracker.View.TwoFactorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitTracker.View"
        mc:Ignorable="d"
        Title="TwoFactorWindow" Height="450" Width="800">
    <Grid>
        <StackPanel >
            <TextBlock Text="Enter the 2FA code:" HorizontalAlignment="Center"/>
            <TextBox Text="{Binding TwoFactorInput, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Content="Submit" Command="{Binding SubmitCommand}" />
        </StackPanel>
    </Grid>
</Window>
