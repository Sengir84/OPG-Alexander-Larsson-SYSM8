<Window x:Class="FitTracker.View.TwoFactorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitTracker.View"
        mc:Ignorable="d"
        Title="TwoFactorWindow" Height="200" Width="400" Background="Crimson">
    <Grid>
        
            <TextBlock Text="Enter your 2FA code:" FontSize="25" VerticalAlignment="Top" HorizontalAlignment="Center" Foreground="LightGray"/>
            <TextBox Text="{Binding TwoFactorInput, UpdateSourceTrigger=PropertyChanged}" Width="100" VerticalAlignment="Center"/>
            <Button Content="Submit" Command="{Binding SubmitCommand}" VerticalAlignment="Bottom" Width="100" Background="Gray" Margin="10"/>
        
    </Grid>
</Window>
